<h1>Tasklist#display</h1>
<h2>タスクの一覧を表示します</h2>
<p><a href="/tasklist/insert">タスクの新規追加はこちら</a></p>

<%= form_tag("/tasklist/delete", method: "post") do %>
  <table border=1>
    <tr>
      <th>タスク名</th>
      <th>締切</th>
      <th>締切までの残り時間</th>
    </tr>
    <% tasks = @tasks %>
      <% tasks.each do |task| %>
      <tr>
        <td><%= task[1] %></td>
        <td><%= task[2] %>/<%= task[3] %>/<%= task[4] %> <%= task[5] %>:<%= task[6] %></td>
        <td>残り <%= task[7] %></td>

        <td><button type="submit" name="id" value= <%= task[0] %> method="post">Done</button></td>
      </tr>
    <% end %>
  </table>
<% end %>