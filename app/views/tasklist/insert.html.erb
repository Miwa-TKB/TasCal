<h1>Tasklist#insert</h1>
<h2>タスクを追加します</h2>
<p><a href="/tasklist/display">タスクの一覧表示はこちら</a></p>
<p>Find me in app/views/tasklist/insert.html.erb</p>
<%= form_tag("/tasklist/insert", method: "post") do %>
  <%= label_tag(:name, "TaskName:") %>  
  <%= text_field_tag(:name) %>
  <%= label_tag(:year, "Year:") %>   
  <%= text_field_tag(:year) %>
  <%= label_tag(:month, "Month:") %>  
  <%= text_field_tag(:month) %>
  <%= label_tag(:day, "Day:") %>  
  <%= text_field_tag(:day) %>
  <%= label_tag(:hour, "Hour:") %>  
  <%= text_field_tag(:hour) %>
  <%= label_tag(:minute, "Minute:") %>  
  <%= text_field_tag(:minute) %>

  <%= submit_tag("追加") %>
<% end %>
