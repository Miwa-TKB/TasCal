<%= render :partial => "header.html.erb"%>

<% case @err_id
   when "名前" %>
<p class="emess">タスク名(50文字以内)を入れてください</p>
   <% when "日程" %>
<p class="emess">締切を設定して下さい</p>
<% when "正常" %>
<p class="emess">タスクを追加しました</p>
<% when "初期" %>
<p></p>
<% end %>

  

<%= form_tag("/task/insert", method: "post", onsubmit: "return validate()") do %>
  <table>
    <tr>
      <td>タスクの名前を入力</td>
    </tr>
    <tr>
      <td>
        <%= label_tag(:name, "タスク名:") %>
        <%= text_field_tag(:name, nil, :required => true) %>
      </td>
    </tr>
    <tr>
      <td>タスクの締切を入力</td>
    </tr>
    <tr>
      <td>
        <!-- <%= label_tag(:year, "Year:") %> -->
        <%= text_field_tag(:year, "", id: 'input-year', type: "hidden",  :required => true) %>
        <!-- <%= label_tag(:month, "Month:") %> -->
        <%= text_field_tag(:month, "", id: 'input-month', type: "hidden",  :required => true) %>
        <!-- <%= label_tag(:day, "Day:") %> -->
        <%= text_field_tag(:day, "", id: 'input-day', type: "hidden",  :required => true) %>
        <!-- <%= label_tag(:hour, "Hour:") %> -->
        <%= text_field_tag(:hour, "", id: 'input-hour', type: "hidden",  :required => true) %>
        <!-- <%= label_tag(:minute, "Minute:") %> -->
        <%= text_field_tag(:minute, "", id: 'input-minute', type: "hidden",  :required => true) %>
        <%= label_tag(:deadline, "締切:") %>
        <%= text_field_tag :deadline, "", id: 'input-deadline', :required => true %>
      </td>
    </tr>
    <tr>
      <td>
        <%= submit_tag("追加") %>
      </td>
    </tr>
  </table>
<% end %>
<%= render :partial => "task.html.erb"%>
